<%- include("./partials/head") %>

    <body>
        <header>

            <h1 class="crear-title">Formulario para editar</h1>

        </header>

        <main class="main-register">


            <form action="/" method="POST" class="form-create">

                <div class="form-create__nombre">
                    <label for="nombre">Nombre del producto *</label>
                    <input type="text" name="nombre" id="nombre" placeholder="Nombre del nuevo producto" required
                        minlength="4">
                </div>
                <div class="form-create__descr">
                    <label for="description">Descripcion del producto*</label>
                    <textarea type="text" placeholder="Introduzca la descripcion del producto" name="description" required
                        id="description" ></textarea>
                </div>
                <div class="form-create__img">
                    <label for="photo">Seleccione las fotos
                        <div class="file-select"><input type="file" name="Photo" accept=".jpg,jpeg" multiple></div>
                    </label>



                </div>
                <div class="form-create__price">
                    <label for="price">Precio *</label><br>
                    <input type="number" name="price" id="price" placeholder=" Introduzca el precio" required
                        minlength="4">
                </div>
                <div class="form-create__color">
                    <div class="form-create__color__div">
                        <label for="favcolor">Seleccion los colores</label>
                    </div>
                    <div class="form-create__color__div-input">
                        <input class="form-create__color-input" type="color" id="favcolor" name="favcolor">
                        <input class="form-create__color-input" type="color" id="favcolor" name="favcolor">
                        <input class="form-create__color-input" type="color" id="favcolor" name="favcolor">
                    </div>

                </div>
                <div class="form-create__cat">
                    <div class="form-create__cat-div">
                        <label for="categoria">Selecciona la categoria</label>
                    </div>
                    <div class="form-create__cat__div-input">
                        <select name="categoria" id="categoria" required>
                            <option value="Botas">Botas</option>
                            <option value="Borcegos">Borcegos</option>
                            <option value="Texanas">Texanas</option>
                            <option value="Otros">Otros</option>
                        </select>


                    </div>

                </div>

                <div class="form-create__size">
                    <div class="form-create__size__title__div">
                        <label class="form-create__size__title" for="talles">Seleccione los talles</label>
                    </div>
                    
                    <label class="form-create__size__check" for="35">
                        <input type="checkbox" name="tale" id="35">
                        35
                    </label>
                    <label class="form-create__size__check" for="36">
                        <input type="checkbox" name="talle" id="36">
                       36
                    </label>
                    <label class="form-create__size__check" for="37">
                        <input type="checkbox" name="talle" id="37">
                       37
                    </label>
                    <label class="form-create__size__check" for="38">
                        <input type="checkbox" name="talle" id="38">
                        38
                    </label>
                    <label class="form-create__size__check" for="39">
                        <input type="checkbox" name="talle" id="39">
                        39
                    </label>
                    <label class="form-create__size__check" for="40">
                        <input type="checkbox" name="talle" id="40">
                        40
                    </label>
                </div>

                <div class="contenedor_button">
                    <button class="form__button" type="submit">Borrar</button>
                    <button class="form__button" type="submit">Enviar</button>

                </div>
            </form>


        </main>

    </body>

    </html>