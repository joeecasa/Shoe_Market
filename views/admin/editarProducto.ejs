<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>
        <main class="main-register">
                
            <form action="/admin/productos/editar/<%=producto.id%>?_method=PUT" method="post" class="form-create" enctype="multipart/form-data">
                    <div>
                        <h1 class="crear-title">EDITAR: <%= producto.name %>
                        </h1>
                        <img class="img-edit-product" src="../../../img/products/<%= producto.image %>" alt="<%= producto.image %>">
                    </div>
                    <div class="form-create__nombre">
                        <label for="nombre">Nombre del producto *</label>
                        <input type="text" name="name" id="nombre" placeholder="Nombre del nuevo producto" required value="<%= producto.name %>"
                            minlength="4">
                    </div>
                    <div class="form-create__descr">
                        <h3>Descripcion del producto*</h3>
                        <div class="div-desc">
                            <label for="material"> Material</label>
                            <input type="text" name="material" value="<%= producto.description.Material %>">
                        </div>
                        <div class="div-desc">
                            <label for="base"> Altura de la base</label>
                            <input type="text" name="base" value="<%= producto.description.Alturabase %>">
                        </div>
                        <div class="div-desc">
                            <label for="taco">Altura del taco</label>
                            <input type="text" name="taco" value="<%= producto.description.Alturataco %>">
                        </div>

                        <div class="div-desc">
                            <label for="cana">Altura de la ca√±a</label>
                            <input type="text" name="cana" value="<%= producto.description.Alturacana %>">
                        </div>

                        <div class="div-desc">
                            <label for="colores">Colores</label>
                            <input type="text" name="colores" value="<%= producto.description.Colores %>">
                        </div>


                    </div>

                    <div class="form-create__img">
                        <label for="photo">Seleccione las foto
                            <div class="file-select"><input type="file" name="img" accept=".jpg,.jpeg"></div>
                        </label>



                    </div>
                    <div class="form-create__price">
                        <label for="price">Precio *</label><br>
                        <input type="number" name="price" id="price" placeholder=" Introduzca el precio" required value="<%= producto.price %>"
                            minlength="4">
                    </div>
                    <div class="form-create__color">
                        <div class="form-create__size__title__div">
                            <label class="form-create__size__title" for="talles">Seleccione los Colores</label>
                        </div>                                           
                        <% colores.forEach(color => { %>                            
                            <label class="form-create__size__check" for="<%= color %> ">
                                <input <%= producto.color  && producto.color.includes(color) ? "checked" : "" %> type="checkbox" name="color" id="<%= color %>" value="<%= color %>">
                                  <%= color %>
                            </label> 
                        <% }) %>

                    </div>

                    <div class="form-create__cat">
                        <div class="form-create__cat-div">
                            <label for="category">Selecciona la categoria</label>
                        </div>
                        <div class="form-create__cat__div-input">
                            <select name="category" id="categoria" required>
                                
                                
                                <option value="" disabled >Seleccione</option>
                            <% categories.forEach(element => { %>
                                 
                              <option <%= producto.category == element ? "selected" : "" %>  value="<%= element %>" > <%= element %> </option>
                            <% }) %>
                           
                            </select>


                        </div>

                    </div>

                    <div class="form-create__size">
                        
                        <div class="form-create__size__title__div">
                            <label class="form-create__size__title" for="talles">Seleccione los talles</label>
                        </div>
                        <% sizes.forEach(size => { %>
                            
                            <label class="form-create__size__check" for="<%= size %> ">
                                <input <%= producto.size  && producto.size.includes(size) ? "checked" : "" %> type="checkbox" name="talle" id="<%= size %>" value="<%= size %>">
                                <%= size %>
                            </label>
                        <% }) %>

                       
                    </div>

                    <div class="contenedor_button">
                
                        <button class="form__button" type="submit">Borrar</button>
                     <button tipe="submit" class="form__button">enviar</button>

                    </div>
                </form>


            </main>

            <%- include("../partials/footer") %>
    </body>

    </html>