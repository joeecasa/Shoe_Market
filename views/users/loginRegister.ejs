<%- include("../partials/head") %>
<body>
    <script>
        swal.fire({
            title: "Usuario creado con éxito",
            icon: "success",
            button: "Aceptar"
        })
        </script>
<%- include("../partials/header2") %>   
                <main class="main-login">
                    <section class="section-login">
            
            
                        <form action="/user/login" method="POST" class="form-login">
            
                            <!-- <div class="usuario"> -->
            
                                <div class="usuario__nombre">
                                    <label for="email">Correo Electrónico:</label>
                                    <input type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : ""%>"
                                    placeholder="Correo electrónico" >
                                    <% if (locals.errors && errors.email ) { %>

                                        <p class="form-error">
                                            <%= errors.email.msg %>
                                        </p>
            
                                        <% } %>
            
                                </div>
                                <div class="usuario__pass">
                                    <label for="password">Contraseña:</label>
                                    <input type="password" name="password" id="password" placeholder="Contraseña" > 
                                    <% if (locals.errors && errors.password ) { %>

                                        <p class="form-error">
                                            <%= errors.password.msg %>
                                        </p>
            
                                        <% } %>
            
                                </div>
            
                            </div>
                            
                            <div class="recordame-enviar">

                            <div class="usuario_record_div">
                                <label  class="usuario_record" for="record">Recordame </label>
                                <input type="checkbox" name="record" id="record" class="checkbox">                               
                            </div>
            
                            <div class="section-login__button">            
                                <button class="button-login" type="submit">Enviar</button>            
                            </div>
            
                        </div>

                        </form>
                    </section>
            
                    <div class="help-button">
                        <button><i class="fa-solid fa-circle-question"></i> Ayuda</button>
                      </div>
                     

                </main>
                <%- include("../partials/footer") %>
                
</body>
</html>