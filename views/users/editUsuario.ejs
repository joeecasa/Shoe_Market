<%- include("../partials/head") %>


    <body>
        
        <%- include("../partials/header2") %>
            <main class="main-register">

                <form action="/admin/usuario/editar/<%= usuario.id%>?_method=PUT" method="post" enctype="multipart/form-data" class="formEditUser" >
                    <div class="form-edit-user-img">
                        <img src="/img/user/<%= usuario.image %>" alt="foto-usuario">
                    </div>

                    <div class="form-edit-user-data">
                        <p><strong>ID :</strong>
                            <%= usuario.id%>
                        </p>

                        <div class="form__nombre">
                            <label for="nombre">Nombres:</label>
                            <input type="text" name="Nombre" id="nombre" placeholder=" Introduzca su Nombre y apellido"
                                value="<%= usuario.first_name%>" class="input">
                        </div>

                        <div class="form__nombre">
                            <label for="nombre">Apellido:</label>
                            <input type="text" name="apellido" id="nombre" placeholder=" Introduzca su Nombre y apellido"
                                value="<%= usuario.last_name%>" class="input">
                        </div>

                        <div class="form__nombre"><label for="email">Correo electr√≥nico:</label>
                            <input type="email" name="email" id="email" placeholder="Introduzca su Correo electronico"
                                value="<%= usuario.email %>" class="input">
                        </div>

                        <div class="form__nombre"><label for="fecha">Fecha de nacimiento:</label>
                            <input type="date" name="fecha" id="fecha" value="<%= usuario.date_of_birth %>" class="input">
                        </div>

                        <div class="form__nombre"><label for="domicilio">Domicilio de envio:</label><br>
                            <input type="text" name="domicilio" id="domicilio" value="<%= usuario.adress %>" class="input">
                        </div>

                        <% if (locals.isAdmin) { %>
                            <div class="form__nombre"><label for="rol">Estado</label><br>
                          <select name="estado" class="form-edit_select">
                          <% locals.estados.forEach(estado => { %>
                            <option <%= estado == usuario.Status ? "selected" : "" %> value="<%= estado %>"> <%= estado %></option>
                         <% }) %>
                            
                          </select>
                        
                         
                        <% } %>
                       

                        <% if (locals.isAdmin) { %>
                            <div class="form__nombre"><label for="rol">Rol</label><br>
                          <select name="rol" class="form-edit_select">
                          <% locals.roles.forEach(rol => { %>
                            <option <%= rol == usuario.roles ? "selected" : "" %> value="<%= rol %>"> <%= rol %></option>
                         <% }) %>
                            
                          </select>
                        
                         
                        <% } %>

                        <div class="form__nombre">
                            <label for="photo">Nueva foto de perfil:
                                <input type="file" name="photo" accept=".jpg,.jpeg" id="file" class="input">
                                <hr>
                            </label><br>
                            <div id="preview"></div>
                               <script>
                                document.getElementById("file").onchange = function (e) {
                                    let reader = new FileReader();
                                    reader.onload = function () {
                                        let preview = document.getElementById('preview'),
                                            image = document.createElement("img");
                                        image.src = reader.result;
                                        preview.innerHTML = '';
                                        preview.append(image);
                                    };
                                    reader.readAsDataURL(e.target.files[0]);
                                }    
                                </script>

                            
                        </div>
                    </div>

                    <div class="contenedor_button">
                    
                        <button class="form__button" type="submit">Enviar</button>


                    </div>

                </form>

                <div class="help-button">
                    <button><i class="fa-solid fa-circle-question"></i> Ayuda</button>
                </div>

            </main>

            <%- include("../partials/footer") %>
    </body>

    </html>