<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header2") %>

            <main class="main-carrito">
                <div class="primer-parte-carrito">
                    <table class="tabla-carrito">
                        <thead>
                            <tr>
                                <th class="probandocarrito"> Foto </th>
                                <th class="probandocarrito"> Nombre </th>
                                <th class="probandocarrito"> Cantidad </th>
                                <th class="probandocarrito"> Precio </th>
                            </tr>
                        </thead>
                        <tbody class="tabla-carrito">
                        </tbody>
                    </table>
                </div>



                <div class="div-resumen-compra">
                    <div class="resumen-de-compra">

                        <article class="resumencarrito">
                            <h2 class="title-resumen">Resumen de compra</h2>

                            <p class="cupon-descuento__text">Cupon de descuento</p>
                            <div class="descuento-flex">

                                <form class="cupon-descuento__form" method="POST" action="/busqueda">

                                    <div class="cont-cupon">

                                        <label for="cupon"></label>
                                        <input type="text" name="cupon" placeholder="Ingrese su codigo">
                                        <button type="submit" class="cupon-descuento__boton">Usar Cupon</button>


                                    </div>

                                </form>



                            </div>



                        </article>

                        <article class="fin-compra">

                            <div class="contenedor-precios">
                                <div class="contenedor-sub">
                                    <div class="contenedor-sub__text">Subtotal</div>
                                    <div class="contenedor-sub__text">$45.000</div>
                                </div>



                                <div class="contenedor-total">
                                    <div class="contenedor-total__text">Total</div>
                                    <div class="contenedor-total__price"> $45.000</div>

                                </div>

                            </div>

                            <div class="boton-finalizar">
                                <div><button class="boton-finalizar__terminar">Finalizar compra</button></div>
                                <div><BUTton class="boton-finalizar__seguir">Seguir comprando</BUTton></div>


                            </div>

                    </div>

                    </article>
                </div>

                <div class="help-button">
                    <button><i class="fa-solid fa-circle-question"></i> Ayuda</button>
                </div>


            </main>


            <%- include("../partials/footer") %>
                <script src="/js/probandoCarrito.js"></script>

    </body>

    </html>